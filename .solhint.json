{
    "extends": "solhint:recommended",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "code-complexity": [
            "error",
            7
        ],
        "compiler-version": [
            "error",
            "0.8.10"
        ],
        "const-name-snakecase": "off",
        "constructor-syntax": "error",
        "func-visibility": [
            "error",
            {
                "ignoreConstructors": true
            }
        ],
        "max-line-length": "off",
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "reason-string": [
            "warn",
            {
                "maxLength": 96
            }
        ],
        "no-empty-blocks": "off",
        "avoid-low-level-calls": "off",
        "not-rely-on-time": "off"
    }
}